{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "kubernetes-helm@3.19.1",
    "git@2.51.2",
    "vals@0.42.6",
    "kubectl@1.34.3",
    "yq-go@4.45.4",
    "kubectl-tree@0.4.6"
  ],
  "shell": {
    "init_hook": [
      "[ -n \"$USE_VALS\" ] && eval \"$(vals env -export -f .env.vals.yaml)\" || true",
      "[ -f .env ] && source .env || true"
    ],
    "scripts": {}
  }
}
